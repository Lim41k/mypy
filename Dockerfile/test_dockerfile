FROM python:3.8

RUN mkdir -p ./test_bot
WORKDIR ./test_bot

ADD https://raw.githubusercontent.com/Lim41k/mypy/master/Dockerfile/i_bot.sh -O i_bot.sh .
ADD https://raw.githubusercontent.com/Lim41k/mypy/master/bot.py -O bot.py .
ADD https://raw.githubusercontent.com/Lim41k/mypy/master/requirements.txt -O requirements.txt .



RUN bash i_bot.sh

CMD [ "python", "./bot.py" ]